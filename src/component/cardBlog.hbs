{{#with data}}

  <div class='card'>
    <div
      class='card-image'
      style='background-image: url({{img}})'
    ></div>
    <h2 class='card-title'>{{title}}</h2>
    <p class='card-text'>{{text}}</p>
    <a
      href='{{href}}'
      class='button card-button'
    >{{button}}</a>
  </div>

{{/with}}