{{#with data}}
	<div class="card">
		<div class="card-header">
			{{name}}
		</div>
		<div class="card-body">
			<div class="card-block">
				<span class="card-price-amount">
					${{price}} 
				</span>
				<span class="card-price-duration">
					/ mo
				</span>
				<div class="card-block">
					{{#each features}}
					<span class="card-description-item">{{this}}</span>
					{{/each}}
				</div>
				<div class="card-block">
					<button
						class="btn {{#if @first}}btn-outline-primary{{else}}btn-primary{{/if}} card-button">{{button}}</button>
				</div>
			</div>
		</div>
	</div>
{{/with}}