

<main>
    <header class="row mt-3">
        <div class="col-12">
            {{#with navigation}}
            <div class="card mb-5">
                <div class="card-body">
                    <ul class="nav">
                        {{#each links}}
                        <li class="nav-item"><a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                            {{/each}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </header>
    <body>
        <div class="row mb-5">
            <div class="col-8">
                {{#with formBlock}}
                    <h1 class="mb-3">{{header}}</h1>
                    <div class="mb-3">
                        {{#with rating}}
                            <div>{{title}}: {{value}}</div>
                        {{/with}}
                    </div>
                    <div class="mb-3">
                        <div class="nav nav-tabs ms-2 mb-5">
                            {{#each actionBlock.tabs}}
                                <div class=" nav-item mx-4">
                                    <a class="nav-link {{#if isActive}}active{{/if}}">{{text}}</a>
                                </div>
                            {{/each}}
                            <hr>
                        </div>
                    </div>
                    <hr>
                    <div class="card mt-5 mb-5">
                        <div class="card-body">
                            {{#with actionBlock.report}}
                                <div class="text-muted mb-4">{{title}}</div>
                                <button class="btn btn-secondary">
                                    <a href="{{button.link}}" class="nav-link">{{button.text}}</a>
                                </button>
                            {{/with}}
                        </div>
                    </div>
                    <hr>
                    <div class="mt-5">
                        {{#with feedbackBlock}}
                            <h2 class="mb-5">{{title}}</h2>
                            <div>
                                {{#each buttons}}
                                    {{#if isWarning}}
                                        <button href="{{link}}" class="btn btn-warning">{{text}}</button>
                                    {{/if}}
                                    {{#if isSuccess}}
                                        <button href="{{link}}" class="btn btn-secondary">{{text}}</button>
                                    {{/if}}
                                    {{#if isDanger}}
                                        <button href="{{link}}" class="btn btn-danger">{{text}}</button>
                                    {{/if}}
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
            </div>
            <div class="col-4 mt-3">
            {{#with formBlock.goodsInfo}}
            <div class="card">
                <div class="card-body">
                    <img src="{{photo}}" class="m-2">
                </div>
                <b class="mb-3 ms-4">
                    {{name}}
                </b>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <p>{{price}}</p>
                    
                    <div class="mt-3">
                        {{#each buttons}}
                        <div>
                            {{#if isPrimary}}
                            <a href="{{link}}" type="button" class="btn btn-primary" target="_blank">
                                {{text}}
                            </a>
                            {{/if}}
                        </div>
                        <div class="my-3">
                            {{#if isSecondary}}
                            <a href="{{link}}" type="button" class="btn btn-secondary" target="_blank">
                                {{text}}
                            </a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    {{#with seller}}
                    <div>{{title}}:<b class="ms-2">{{value}}</b></div>
                    {{/with}}
                </div>
            </div>
            </div>
            {{/with}}
        </div>
        <hr class="mt-5 mb-5">  
            {{#with service}}
                <div class="col-12 mt-5">
                    <div class="card text-center text-bg-success">
                        <div class="card-header">
                            <h2 class="text-title">{{title}}</h2>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{description}}</p>
                            {{#each buttons}}
                                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/with}}
    </body>
    <hr>
    <footer>
        <div class="row">
            {{#each footer}}
            <div class="col-2 list-group">
                <ul class="nav flex-column">
                    {{#each this}}
                    <li class="nav-item my-1">
                        <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </footer>
</main>