

<header class='header '>
	<div>
		{{> logo}}
	</div>

	<nav class='header-nav'>
		<div class="header-nav1-right">
			{{> nav1 list=header }}
		</div>
	</nav>
</header>

{{#with main}}
	<div class="main">
		<img src="{{image}}" alt="Main image" class="main-image">
		<div class="main-content">
			<h1 class="main-heading">{{heading}}</h1>
			<p class="main-descriotion">{{descriotion}}</p>
			<a href="{{href}}" class="button card-button">{{button}}</a>
		</div>
	</div>
{{/with}}



<main class="featured">
	{{#each featured}}
		<div class="featured-conten">
			<div class="featured-image" style="background-image: url({{photo}});"></div>
			<h2 class="featured-heading">{{heading}}</h2>
			<p class="featured-info">{{info}}</p>
			<a href="{{linkUrl}}" class="">{{linkText}}</a>
		</div>
	{{/each}}
</main>

<div class="actions">
    {{#each actions}}
        <div class="actions-block">
            <div class="actions-content">
                <h3 class="actions-heading">{{heading}}</h3>
            </div>
			<a href="{{url}}" class="button actions-button">{{text}}</a>
        </div>
    {{/each}}
</div>


<footer class="page-block">
	<div class="footer">
		<div>
			{{> logo}}
			<span class="footer-copyright">Copyright 2023-2024</span>
		</div>

		{{#each footer}}
		<div>
			<span class="footer-title">{{title}}</span>
			{{> nav1 list=links isVertical=true}}
		</div>
		{{/each}}
	</div>
</footer>

