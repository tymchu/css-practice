<div class='page'>
  <div class='page-content'>
	<header class="page-block">
		<div class='header row g-0'>
			<div class="col-3">
				{{> logo}}
			</div>

			<nav class='header-nav col-9 '>
				<div class="header-nav1-right">
					{{> nav1 list=header }}
				</div>
			</nav>
		</div>
	</header>

	<section class="page-block">
		<div class="hero">
			{{#with hero}}
				{{> hero title=title text=text }}
				<a class="button" href="{{button.url}}">{{button.text}}</a>
			{{/with}}
		</div>
	</section>

	<section class="page-block">
		<div class="row g-4">
			{{#each preview}}
				<div class="col-6">
					{{> cardPreview data=this}}
				</div>
			{{/each}}
		</div>
	</section>

	<main class="page-block">
		<div class="main">
			<div class="row g-0">
				<div class="col-12">
					<div class="list-header">
						<div class="row g-0">
							<div class="col-6">
								<h2 class="list-title">List of posts</h2>
							</div>
							<div class="col-6">
								<div class="category-list">
									{{#each categories}}
										<button class="category-button">{{text}}</button>
									{{/each}}
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-7">
					<div class="list">
						{{#each news}}
							{{> cardPost data=this}}
						{{/each}}
					</div>
				</div>

				<div class="col-5">
					<aside class="list-aside">
						<div class="about">
							<h4 class="about-title">About</h4>
							<p class="about-text">{{about}}</p>
						</div>
						{{> linkList data=archive title="Archives"}}

						{{> linkList data=social title="Social"}}
					</aside>
				</div>
			</div>
		</div>
	</main>

	<footer class="page-block">
		<div class="row g-0 footer">
			<div class="col-3">
				{{> logo}}
				<span class="footer-copyright">Copyright 2023-2024</span>
			</div>

			{{#each footer}}
			<div class="col-3">
				<span class="footer-title">{{title}}</span>
				{{> nav1 list=links isVertical=true}}
			</div>
			{{/each}}
		</div>
	</footer>
  </div>
</div>
