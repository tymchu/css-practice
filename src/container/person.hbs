{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main class="m-5">
    <div>
        {{#with person}}
            <div>
                <h1><p>name: {{name}}<br>age: {{age}}<br>gender: {{gender}}</p></h1>
            </div>
                <hr>
                {{#with address}}
                    {{> title data='Address' big=ture}}
                    <br>
                    <div>
                    {{street}}, {{city}}, {{state}}, {{zip}}, {{country}}
                    </div>
                {{/with}}
                <hr>
            <section>
                {{#each education}}
                    {{> title data="Education" big=true}}
                    <br>
                        <div>
                            <div><em>Degree: {{degree}}</em></div>
                            <br>
                            <div>Major: {{major}}</div>
                            <br>
                            <div>University: {{university}} {{graduationYear}}</div>
                        </div>
                {{/each}} 
            </section>
            <hr>
            <br>
            <section>
                {{#each workExperience}}
                    {{> title data="WorkExperience" big=true}}
                    <br>
                        <div>
                            <div>company: {{company}}</div>
                            <br>
                            <div>title: {{title}}</div>
                            <br>
                            <div>startDate: {{startDate}} по {{endDate}}</div>
                            <div><p>responsibilities: {{responsibilities}}</p></div>
                            <div>year_founded:{{year_founded}}<br>industry:{{industry}}</div>
                        </div>
                        <br>
                        <hr>
                        <section>
                            {{#each employees}}
                                <strong>Employees</strong>
                                <div>
                                <br>
                                    <div>name:{{name}}</div>
                                    <div>position: {{position}}</div>
                                    <div>department: {{department}}</div>
                                </div>
                                <hr>
                                {{#each projects}}
                                    <strong>projects</strong>
                                    <div>
                                    <br>
                                        <div>name: {{name}}</div>
                                        <div>description: {{description}}</div>
                                        <div>status: {{status}}</div>
                                    </div>
                                    <hr>
                                    <br>
                                    {{#each teams}}
                                    <h2>Team - "{{team_name}}"</h2>

                                        {{#with team_leader}}
                                            <div>
                                                <div>name: {{name}}</div>
                                                <div>title: {{title}}</div>
                                                <div>email: {{email}}</div>
                                            </div>
                                        {{/with}}
                                        <br>
                                        <hr>
                                        {{#each team_members}}
                                            <strong><p>Team members</p></strong>
                                            <div>
                                                <div>name: {{name}}</div>
                                                <div>title: {{title}}</div>
                                                <div>email: {{email}}</div>
                                                <div>skills: {{skills}}</div>
                                            </div>
                                            <br>
                                            <hr>
                                            {{#each projects}}
                                            <strong><p>Projects</p></strong>
                                            <div>
                                                <div>name: {{name}}</div>
                                                <div>description: {{description}}</div>
                                                <div>technologies: {{technologies}}</div>
                                            </div>
                                            <br>
                                            <hr>
                                            <strong><p>Team members</p></strong>
                                            <br>
                                                {{#each team_members}}
                                                <div>
                                                    <div>name: {{name}}</div>
                                                    <div>title: {{title}}</div>
                                                </div>
                                                {{/each}}
                                            {{/each}}
                                        {{/each}}
                                    {{/each}}
                                {{/each}}
                            {{/each}}
                        </section>
                {{/each}} 
            </section>
        {{/with}}
    </div>
</main>

